    <servlet-name>category-editing-menu</servlet-name>
    <jsp-file>/WEB-INF/view/category-editing-menu.jsp</jsp-file>
  </servlet>
  <servlet-mapping>
    <servlet-name>category-editing-menu</servlet-name>
    <url-pattern>/category-editing-menu</url-pattern>
  </servlet-mapping>
  <servlet>
    <servlet-name>category-deleting-menu</servlet-name>
    <jsp-file>/WEB-INF/view/category-deleting-menu.jsp</jsp-file>
  </servlet>
  <servlet-mapping>
    <servlet-name>category-deleting-menu</servlet-name>
