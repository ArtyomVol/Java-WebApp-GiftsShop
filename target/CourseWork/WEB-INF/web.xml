  </servlet>
  <servlet-mapping>
    <servlet-name>personal-area</servlet-name>
    <url-pattern>/personal-area</url-pattern>
  </servlet-mapping>

  <filter>
    <filter-name>CharsetFilter</filter-name>
    <filter-class>by.bntu.fitr.poisit.filter.CharsetFilter</filter-class>
    <init-param>
      <param-name>requestEncoding</param-name>
      <param-value>UTF-8</param-value>
    </init-param>
  </filter>
  <filter-mapping>
    <filter-name>CharsetFilter</filter-name>
    <url-pattern>/*</url-pattern>
  </filter-mapping>
  <filter-mapping>
    <filter-name>CheckAccountRoleIsNotUserFilter</filter-name>
    <url-pattern>/personal-area</url-pattern>
  </filter-mapping>
  <filter-mapping>
    <filter-name>CheckAccountRoleIsNotUserFilter</filter-name>
    <url-pattern>/personal-area-servlet</url-pattern>
  </filter-mapping>
  <filter-mapping>
    <filter-name>CheckAccountRoleIsNotUserFilter</filter-name>
    <url-pattern>/shopping-cart</url-pattern>
  </filter-mapping>
  <filter-mapping>
    <filter-name>CheckAccountRoleIsNotUserFilter</filter-name>
    <url-pattern>/shopping-cart-servlet</url-pattern>
  </filter-mapping>
  <filter-mapping>
    <filter-name>CheckAccountRoleIsNotUserFilter</filter-name>
    <url-pattern>/item-adding-to-shopping-cart-servlet</url-pattern>
  </filter-mapping>
  <filter-mapping>
    <filter-name>CheckAccountRoleIsNotUserFilter</filter-name>
    <url-pattern>/delete-item-from-shopping-cart-servlet</url-pattern>
  </filter-mapping>
  <filter-mapping>
    <filter-name>CheckAccountRoleIsNotUserFilter</filter-name>
    <url-pattern>/purchase-shopping-cart-servlet</url-pattern>
  </filter-mapping>
  <filter-mapping>
    <filter-name>CheckAccountRoleIsNotAdminFilter</filter-name>
    <url-pattern>/item-adding-menu-servlet</url-pattern>
  </filter-mapping>
  <filter-mapping>
    <filter-name>CheckAccountRoleIsNotAdminFilter</filter-name>
    <url-pattern>/item-adding-menu</url-pattern>
  </filter-mapping>
  <filter-mapping>
    <filter-name>CheckAccountRoleIsNotAdminFilter</filter-name>
    <url-pattern>/item-editing-servlet</url-pattern>
  </filter-mapping>
  <filter-mapping>
    <filter-name>CheckAccountRoleIsNotAdminFilter</filter-name>
    <url-pattern>/item-editing-menu</url-pattern>
  </filter-mapping>
  <filter-mapping>
    <filter-name>CheckAccountRoleIsNotAdminFilter</filter-name>
    <url-pattern>/item-deleting-servlet</url-pattern>
  </filter-mapping>
  <filter-mapping>
    <filter-name>CheckAccountRoleIsNotAdminFilter</filter-name>
    <url-pattern>/category-adding-menu</url-pattern>
  </filter-mapping>
  <filter-mapping>
    <filter-name>CheckAccountRoleIsNotAdminFilter</filter-name>
    <url-pattern>/category-editing-menu</url-pattern>
  </filter-mapping>
  <filter-mapping>
    <filter-name>CheckAccountRoleIsNotAdminFilter</filter-name>
    <url-pattern>/category-deleting-menu</url-pattern>
  </filter-mapping>
  <filter-mapping>
    <filter-name>CheckAccountRoleIsNotAdminFilter</filter-name>
    <url-pattern>/category-deleting-menu-servlet</url-pattern>
  </filter-mapping>
  <filter-mapping>
    <filter-name>CheckAccountRoleIsNotAdminFilter</filter-name>
    <url-pattern>/category-editing-menu-servlet</url-pattern>
  </filter-mapping>
  <filter-mapping>
    <filter-name>CheckAccountRoleIsNotAdminFilter</filter-name>
    <url-pattern>/category-adding-menu-servlet</url-pattern>
  </filter-mapping>
  <filter-mapping>
    <filter-name>CheckAccountRoleIsNotAdminFilter</filter-name>
    <url-pattern>/categories-editing-menu</url-pattern>
  </filter-mapping>
  <filter-mapping>
    <filter-name>CheckAccountRoleIsNotAdminFilter</filter-name>
    <url-pattern>/news-adding-menu</url-pattern>
